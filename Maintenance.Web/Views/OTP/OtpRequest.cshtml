@model Maintenance.Models.OtpRequest

<h3 class="main_header">Banducci Enterprises</h3>
<hr />

<h4>OTP Help Request</h4>
<p>Complete and submit the form for any technology issues</p>

@using (Html.BeginForm("SendOtp", "OTP", FormMethod.Post, new { }))
{<div style="background-color: lightblue; padding-top:2%; padding-left: 2%; padding-right: 2%;">
        <div class="form-group">
            <div>
                @Html.LabelFor(m => m.Store)
            </div>
            <div>
                @Html.DropDownListFor(m => m.StoreId, Model.Store)
            </div>
        </div>

        <div class="form-group">
            <div>
                @Html.LabelFor(m => m.Name)
            </div>
            <div>
                @Html.TextBoxFor(m => m.Name)
                @Html.ValidationMessageFor(m => m.Name)
            </div>
        </div>

        <div class="form-group">
            <div>
                @Html.LabelFor(m => m.Equipment)
            </div>
            <div>
                @Html.DropDownListFor(m => m.EquipmentId, Model.Equipment)
            </div>
        </div>

        <div class="form-group">
            <div>
                @Html.LabelFor(m => m.Location)
            </div>
            <div>
                @Html.DropDownListFor(m => m.LocationId, Model.Location)
            </div>
        </div>

        <div class="form-group">
            <div>
                @Html.LabelFor(m => m.Problem)
            </div>
            <div>
                @Html.TextAreaFor(m => m.Problem)
                @Html.ValidationMessageFor(m => m.Problem)
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-10">
                <button type="reset" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary" id="ContactMessage">Submit</button>
            </div>
        </div>
    </div>
}
