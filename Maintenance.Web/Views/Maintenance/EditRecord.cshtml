<h3 class="main_header">Banducci Enterprises</h3>
<hr />

@using (Html.BeginForm("SaveRecord", "Maintenance", FormMethod.Post))
{
    @Html.AntiForgeryToken()



    <div class="form-horizontal">
        <h4 id="edit_header"></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Store", new { @class = "control-label col-md-3" })
            @Html.DropDownList("Store")
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ServiceDate, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ServiceDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ServiceDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Vendor", new { @class = "control-label col-md-3" })
            @Html.DropDownList("Vendor")
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Invoice, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Invoice, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Invoice, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RepairDetail, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RepairDetail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RepairDetail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Repair Type", new { @class = "control-label col-md-3" })
            @Html.DropDownList("RepairType")
        </div>

        <div class="form-group" style="display:none" id="store_name">
            <input type="text" id="storename" name="storename" />
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<script>
    var Store = "@Model.StoreId";
    var RepairType = "@Model.RepairType";
    var Vendor = "@Model.VendorName";
    var id = @Model.Id;
    var StoreName = "@Model.StoreName";
    var StoreId = @Model.StoreId;
</script>
